<Page x:Class="GamingOverlay.Pages.RecordingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Recording">
    <Grid Background="Black">
        <TextBlock Text="Game Recording Options"
                   Foreground="White"
                   FontSize="24"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,20,0,0"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Start Recording" Foreground="White" FontSize="20" Margin="0,5"/>
            <TextBlock Text="Save Clip (Last 30s)" Foreground="White" FontSize="20" Margin="0,5"/>
            <TextBlock Text="Manage Recordings" Foreground="White" FontSize="20" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Page>
