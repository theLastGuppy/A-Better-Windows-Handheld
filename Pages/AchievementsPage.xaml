<Page x:Class="GamingOverlay.Pages.AchievementsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Achievements">
    <Grid Background="Black">
        <TextBlock Text="Achievements"
                   Foreground="White"
                   FontSize="24"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,20,0,0"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Achievement 1: Unlocked" Foreground="White" FontSize="20" Margin="0,5"/>
            <TextBlock Text="Achievement 2: Locked" Foreground="White" FontSize="20" Margin="0,5"/>
            <TextBlock Text="Achievement 3: Unlocked" Foreground="White" FontSize="20" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Page>
