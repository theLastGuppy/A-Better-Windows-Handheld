<Page x:Class="GamingOverlay.Pages.DiscordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Discord">
    <Grid Background="Black">
        <TextBlock Text="Discord Options"
                   Foreground="White"
                   FontSize="24"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,20,0,0"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Join Server" Foreground="White" FontSize="20" Margin="0,5"/>
            <TextBlock Text="View Friends" Foreground="White" FontSize="20" Margin="0,5"/>
            <TextBlock Text="Start Voice Chat" Foreground="White" FontSize="20" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Page>
