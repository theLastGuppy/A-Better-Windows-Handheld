<Page x:Class="GamingOverlay.Pages.PerformancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Performance">
    <Grid Background="Black">
        <TextBlock Text="Performance Metrics"
                   Foreground="White"
                   FontSize="24"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,20,0,0"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="CPU Usage: 35%" Foreground="White" FontSize="20" Margin="0,5"/>
            <TextBlock Text="GPU Usage: 40%" Foreground="White" FontSize="20" Margin="0,5"/>
            <TextBlock Text="RAM Usage: 6GB / 16GB" Foreground="White" FontSize="20" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Page>
