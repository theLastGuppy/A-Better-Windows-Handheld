<Page x:Class="GamingOverlay.Pages.GameOptionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="GameOptions">
    <Grid Background="Black">
        <Image Source="Images/placeholder_game_image.png"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="0,20,0,0"
               Width="300" Height="200"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Resume Game" Foreground="White" FontSize="20" Margin="0,5"/>
            <TextBlock Text="View Game Details" Foreground="White" FontSize="20" Margin="0,5"/>
            <TextBlock Text="Guides" Foreground="White" FontSize="20" Margin="0,5"/>
            <TextBlock Text="Notes" Foreground="White" FontSize="20" Margin="0,5"/>
            <TextBlock Text="Exit Game" Foreground="White" FontSize="20" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Page>
